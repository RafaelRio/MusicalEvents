<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_color"
    tools:context=".adminUser.uploadedEvents.UploadedEventsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/bodoni_bold"
            android:text="@string/my_events"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/login_tvLogin_textSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imv_nodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/no_data"
            android:contentDescription="@string/ivNodata" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_my_events"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</ScrollView>