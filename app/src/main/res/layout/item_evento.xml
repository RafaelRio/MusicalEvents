<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        app:cardBackgroundColor="@color/primary_light_color"
        app:cardCornerRadius="@dimen/_16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/primary_color"
        app:strokeWidth="@dimen/_2dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:fontFamily="@font/bodoni_mediumitalic"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/_25sp"
                app:drawableEndCompat="@drawable/ic_next"
                tools:text="Concierto de marchas" />

            <TextView
                android:id="@+id/tvUbicacionEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_5dp"
                android:fontFamily="@font/bodoni_regular"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/_15sp"
                app:drawableStartCompat="@drawable/ic_location_event"
                tools:text="Plaza del obispo" />

            <TextView
                android:id="@+id/tvHoraEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_16dp"
                android:fontFamily="@font/bodoni_regular"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/_15sp"
                app:drawableStartCompat="@drawable/ic_hour_event"
                tools:text="15:30" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>